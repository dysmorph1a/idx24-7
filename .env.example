# IDX Workspace URL (required)
IDX_WORKSPACE_URL=https://your-workspace.idx.google.com

# Ping interval in milliseconds (default: 300000 = 5 minutes)
PING_INTERVAL_MS=300000

# Optional: Session cookie for authenticated requests
# IDX_SESSION_COOKIE=your_session_cookie_here

# Health check port (default: 8080)
PORT=8080
# ============================================
# EMAIL NOTIFICATION CONFIGURATION
# ============================================

# Enable email alerts
EMAIL_ENABLED=true

# Email service provider (gmail, outlook, yahoo, etc)
EMAIL_SERVICE=gmail

# Sender email address
# For Gmail: use your app-specific email address
EMAIL_USER=your-email@gmail.com

# Email password or app password
# For Gmail: generate at https://myaccount.google.com/apppasswords (2FA required)
EMAIL_PASSWORD=your-16-char-app-password

# Recipient email address (where alerts are sent)
EMAIL_RECIPIENT=your-email@gmail.com

# Send alert after N consecutive ping errors (default: 3)
ERROR_EMAIL_THRESHOLD=3

# Days before cookie expiry to warn (default: 7)
COOKIE_EXPIRY_WARNING_DAYS=7